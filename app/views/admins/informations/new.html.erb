<div class="row"><!-- --------------------row-------------------- -->
    <div class="col-md-5">
        <h2><%= link_to "戻る", admins_informations_path, class: "btn btn-primary" %></h2>
    </div>

    <div class="col-md-6">
        <h2>Information投稿</h2>
    </div>

    <div class="col-md-1">
    </div>
</div><!-- --------------------------row------------------------- -->

<%= form_for @information, url: admins_informations_path do |f| %>

<div class="row"><!-- --------------------row-------------------- -->
    <div class="col-md-12">
        <h3>タイトル</h3>
    </div>

    <div class="col-md-12">
        <%= f.text_field :title, autofocus: true, placeholder:'タイトル', size: "160" %>
    </div>

    <div class="col-md-12">
        <h3>内容</h3>
    </div>

    <div class="col-md-12">
        <%= f.text_area :content, autofocus: true, placeholder: '内容', size: "20x15", class: "form-control" %>
    </div>
</div><!-- --------------------------row------------------------- -->

<div class="row"><!-- --------------------row-------------------- -->

    <div class="col-md-11">
    </div>

    <div class="col-md-1">
        <%= f.submit "投稿", class: "btn btn-success btn-lg" %>
    </div>
</div><!-- --------------------------row------------------------- -->

<% end %>