<div class="row"><!-- --------------------row-------------------- -->
    <div class="col-md-3">
        <h2>料金編集</h2>
    </div>

    <div class="col-md-2 col-md-offset-5">
    </div>

    <div class="col-md-2">
    </div>
</div><!-- --------------------------row------------------------- -->



<div class="row"><!-- --------------------row-------------------- -->
	<%= form_for @price, url: admins_price_path(1) do |f| %>

	<div class="col-md-6"><!-- col -->
		<h3>基本料金</h3>

			<div>
			<h4>料金：<%= @price.basic_price %>円</h4>
			<h4>変更：<%= f.text_field :basic_price, autofocus: true %>　<%= f.submit "更新", class: "btn btn-primary" %></h4>
			</div>

	</div><!-- col -->


	<div class="col-md-6"><!-- col -->
		<h3>ナイター料金</h3>

			<div>
			<h4>料金：<%= @price.night_price %>円</h4>
			<h4>変更：<%= f.text_field :night_price, autofocus: true %>　<%= f.submit "更新", class: "btn btn-primary" %></h4>
			</div>

	</div><!-- col -->

	<% end %>
</div><!-- --------------------------row------------------------- -->

