                <th style="width:30%">一人平均</th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <td><%= @onoffs.count %>枠</td>
                <td><%= @r_reservations.count %>回</td>
                <td><%= @r_avarage %>回</td>
