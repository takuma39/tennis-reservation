<div class="row"><!-- --------------------row-------------------- -->
    <div class="col-md-3">
        <h2>統計</h2>
    </div>

    <div class="col-md-2 col-md-offset-5">
    </div>

    <div class="col-md-2">
    </div>
</div><!-- --------------------------row------------------------- -->


<div class="row"><!-- --------------------row-------------------- -->
    <div class="col-md-6">

    <table class="table table-inverse", style="margin-top:15px">

        <thead>
            <tr class="active">
                <th style="width:30%">ユーザー数</th>
                <th style="width:30%">男</th>
                <th style="width:30%">女</th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <td><%= @users.count %>人</td>
                <td><%= @users.where(gender: "man").count %>人</td>
                <td><%= @users.where(gender: "woman").count %>人</td>
            </tr>
        </tbody>

    </table>

    </div>

    <div class="col-md-6">
    </div>
</div><!-- --------------------------row------------------------- -->

<div class="row"><!-- --------------------row-------------------- -->
    <div class="col-md-6">

    <table class="table table-inverse", style="margin-top:15px">

        <thead>
            <tr class="active">
                <th style="width:30%">来場者数</th>
                <th style="width:30%">一組平均</th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <td><%= @r_reservations.sum(:number) %>人</td>
                <td><%= @r_reservations.sum(:number) / @r_reservations.count %>人</td>
            </tr>
        </tbody>

    </table>

    </div>

    <div class="col-md-6">
    </div>
</div><!-- --------------------------row------------------------- -->


<div class="row"><!-- --------------------row-------------------- -->
