<div class="row"><!-- --------------------row-------------------- -->
  <div class="col-md-3">
    <h2><%= current_user.name %>　様</h2>
  </div>

  <div class="col-md-2 col-md-offset-5">
  </div>

  <div class="col-md-2">
  </div>
</div><!-- --------------------------row------------------------- -->

<div class="row"><!-- --------------------row-------------------- -->
  <div class="col-md-12">
    <h3>User情報</h3>
  </div>

    <%= form_for @user, url: users_user_path(current_user.id) do |f| %>


  <div class="field">
    <%= f.label :name, "名前" %><br />
    <%= current_user.name %>
  </div>

  <div class="field">
    <%= f.label :name_kana, "フリガナ" %><br />
    <%= current_user.name_kana %>
  </div>

  <div class="field">
    <%= f.label :gender, "性別" %><br />
    <%= current_user.gender %>
  </div>

  <div class="field">
    <%= f.label :birthday, "生年月日" %><br />
    <%= current_user.birthday %>
  </div>

<!-- 住所 -->
  <div class="field">
    <%= f.label :postcode, "郵便番号" %><br />
    <%= f.text_field :postcode, autofocus: true, placeholder:'郵便番号を半角で入力' %>
  </div>

  <div class="field">
    <%= f.label :prefecture_code, "都道府県" %><br />
    <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, include_blank: '都道府県' %>
  </div>

  <div class="field">
    <%= f.label :address_city, "市区村町" %><br />
    <%= f.text_field :address_city, autofocus: true, placeholder: '市区村町名を入力' %>
  </div>

  <div class="field">
    <%= f.label :address_toen, "町名" %><br />
    <%= f.text_field :address_town, autofocus: true, placeholder: '町名' %>
  </div>

  <div class="field">
    <%= f.label :address_street, "番地" %><br />
    <%= f.text_field :address_street, autofocus: true, placeholder: '番地' %>
  </div>

  <div class="field">
    <%= f.label :address_building, "建物、部屋番号" %><br />
    <%= f.text_field :address_building, autofocus: true, placeholder: '建物、部屋番号を入力' %>
  </div>
<!-- 住所 -->

    <div class="field">
    <%= f.label :telephone_number, "電話番号" %><br />
    <%= f.text_field :telephone_number, autofocus: true, placeholder:'電話番号を半角で入力（-なし）' %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, placeholder:'例：XXXX@XXX.com' %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder:'パスワードを入力' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:'再確認' %>
  </div>

  <div class="actions">
    <%= f.submit "更新", class: "btn btn-primary" %>
  </div>
<% end %>
</div><!-- --------------------------row------------------------- -->
