<div class="row"><!-- --------------------row-------------------- -->
    <div class="col-md-12">
        <h3>予約一覧</h3>
    </div>


    <table class="table table-inverse", style="margin-top:15px">

        <thead>
            <tr class="active">
                <th style="width:20%">入金</th>
                <th style="width:20%">日付</th>
                <th style="width:20%">時間</th>
            </tr>
        </thead>

        <tbody>
            <% @reservations.each do |r|%>
            <tr>
                <td><%= r.status %></td>
                <td>
                    <% link_to users_my_reservations(current_user.id, r.id) do%>
                        <%= r.date %>
                    <% end %>
                    </td>
                <td><%= r.start_time %></td>
            </tr>
            <% end %>
        </tbody>

    </table>


</div><!-- --------------------------row------------------------- -->


