<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>


  <div class="field">
    <%= f.label :name, "名前" %><br />
    <%= f.text_field :name, autofocus: true, placeholder:'名前' %>
  </div>

  <div class="field">
    <%= f.label :name_kana, "フリガナ" %><br />
    <%= f.text_field :name_kana, autofocus: true, placeholder:'フリガナ' %>
  </div>

  <div class="field">
    <%= f.label :gender, "性別" %><br />
    男：<%= f.radio_button :gender, :man %>
    女：<%= f.radio_button :gender, :woman %>
  </div>

  <div class="field">
    <%= f.label :birthday, "生年月日" %><br />
    <%= f.date_select :birthday, use_month_numbers: true,start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1) %>
  </div>

<!-- 住所 -->
  <div class="field">
    <%= f.label :postcode, "郵便番号" %><br />
    <%= f.text_field :postcode, autofocus: true, placeholder:'郵便番号を半角で入力' %>
  </div>

  <div class="field">
    <%= f.label :prefecture_code, "都道府県" %><br />
    <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, include_blank: '都道府県' %>
  </div>

  <div class="field">
    <%= f.label :address_city, "市区村町" %><br />
    <%= f.text_field :address_city, autofocus: true, placeholder: '市区村町名を入力' %>
  </div>

  <div class="field">
    <%= f.label :address_street, "町名・番地" %><br />
    <%= f.text_field :address_street, autofocus: true, placeholder: '町名・番地' %>
  </div>

  <div class="field">
    <%= f.label :address_building, "建物、部屋番号" %><br />
    <%= f.text_field :address_building, autofocus: true, placeholder: '建物、部屋番号を入力' %>
  </div>
<!-- 住所 -->

    <div class="field">
    <%= f.label :telephone_number, "電話番号" %><br />
    <%= f.text_field :telephone_number, autofocus: true, placeholder:'電話番号を半角で入力（-なし）' %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, placeholder:'例：XXXX@XXX.com' %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder:'パスワードを入力' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:'再確認' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
